# Certify Studio Environment Configuration
# Copy this to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-this-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-this-in-production
ENCRYPTION_KEY=dev-encryption-key-change-this-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/certify_studio

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Services (Add your API keys)
OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Neo4j (for GraphRAG)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# File Storage
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports
TEMP_DIR=./temp

# CORS (for frontend development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
